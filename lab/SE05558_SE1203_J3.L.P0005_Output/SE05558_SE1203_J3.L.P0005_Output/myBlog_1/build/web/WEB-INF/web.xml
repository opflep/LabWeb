<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>BlogController</servlet-name>
        <servlet-class>controllers.BlogController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactController</servlet-name>
        <servlet-class>controllers.ContactController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SpecificBlogController</servlet-name>
        <servlet-class>controllers.SpecificBlogController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryBlogController</servlet-name>
        <servlet-class>controllers.CategoryBlogController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryBlogController</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SpecificBlogController</servlet-name>
        <url-pattern>/specificBlog</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactController</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlogController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <error-page>
        
        <location>/error.jsp</location>
    </error-page>
</web-app>
