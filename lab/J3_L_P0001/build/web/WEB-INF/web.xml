<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/MakeQuiz.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <servlet-name>DoManagerQuiz</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <servlet-name>DoManagerQuiz</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/TakeQuiz.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/MakeQuiz.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>DoLogin</servlet-name>
        <servlet-class>com.servlet.DoLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoQuiz</servlet-name>
        <servlet-class>com.servlet.DoQuiz</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoManagerQuiz</servlet-name>
        <servlet-class>com.servlet.DoManagerQuiz</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoMakeQuiz</servlet-name>
        <servlet-class>com.servlet.DoMakeQuiz</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoTakeQuiz</servlet-name>
        <servlet-class>com.servlet.DoTakeQuiz</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoNextQuiz</servlet-name>
        <servlet-class>com.servlet.DoNextQuiz</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoCheckQuiz</servlet-name>
        <servlet-class>com.servlet.DoCheckQuiz</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoLogin</servlet-name>
        <url-pattern>/DoLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoQuiz</servlet-name>
        <url-pattern>/DoQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoManagerQuiz</servlet-name>
        <url-pattern>/DoManagerQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoMakeQuiz</servlet-name>
        <url-pattern>/DoMakeQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoTakeQuiz</servlet-name>
        <url-pattern>/DoTakeQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoNextQuiz</servlet-name>
        <url-pattern>/DoNextQuiz</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoCheckQuiz</servlet-name>
        <url-pattern>/DoCheckQuiz</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
